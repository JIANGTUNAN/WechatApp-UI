.home {
  height: 188vh;
  background-color: #f7f7f7;
}
.home .nav {
  padding: 0 30rpx;
  background-color: #fff;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.home .nav .nav-left {
  margin-right: 50rpx;
  display: flex;
  justify-content: space-between;
  flex: 4;
}
.home .nav .nav-left .nav-time {
  height: 100rpx;
  font-size: 36rpx;
  font-weight: bold;
  line-height: 100rpx;
}
.home .nav .nav-left .nav-name {
  height: 100rpx;
  color: #0c34ba;
  font-size: 36rpx;
  font-weight: bold;
  line-height: 100rpx;
}
.home .nav .nav-left .nav-name .login-tip {
  font-size: 28rpx;
  cursor: pointer;
}
.home .nav .nav-right {
  height: 70rpx;
  border-radius: 50rpx;
  padding: 0 30rpx;
  background-color: #f7f8fa;
  display: flex;
  align-items: center;
  flex: 6;
}
.home .nav .nav-right .ipt {
  font-size: 30rpx;
  background-color: #f7f8fa;
}
.home .banner {
  border-radius: 30rpx;
  margin: 20rpx;
  overflow: hidden;
}
.home .banner .banner-box {
  height: 500rpx;
}
.home .banner .banner-box .swiper-item {
  width: 100%;
  height: 100%;
}
.home .banner .banner-box .swiper-item .img {
  width: 100%;
}
.home .uni-swiper-dot {
  width: 50rpx;
  height: 8rpx;
  border-radius: 10rpx;
  margin-bottom: 30rpx;
}
.home .isHot {
  height: 100rpx;
  margin: 0 30rpx;
  background-color: #fff;
  display: flex;
  align-items: center;
}
.home .isHot .isHot-title {
  border: 2rpx solid;
  width: 200rpx;
  height: 70rpx;
  color: #fff;
  font-size: 36rpx;
  font-weight: bold;
  border-radius: 0 40rpx 0 0;
  background-color: #0c34ba;
  line-height: 70rpx;
  text-align: center;
}
.home .product {
  margin: 30rpx;
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
}
.home .product .product-box {
  position: relative;
  width: 330rpx;
  border-radius: 20rpx;
  padding: 20rpx;
  box-sizing: border-box;
  background-color: #fff;
  margin-bottom: 30rpx;
}
.home .product .product-box .img-box {
  width: 100%;
  border-radius: 20rpx;
}
.home .product .product-box .img-box .img {
  width: 100%;
}
.home .product .product-box .product-title {
  color: #999;
  font-size: 36rpx;
  font-weight: bold;
  margin: 10rpx 0;
}
.home .product .product-box .product-name {
  width: 280rpx;
  height: 40rpx;
  color: #C0C0C0;
  font-size: 26rpx;
  margin: 10rpx 0;
  text-align: start;
  display: -webkit-box;
  white-space: pre-wrap;
  overflow: hidden;
  text-overflow: ellipsis;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
}
.home .product .product-box .product-price {
  color: #0c34ba;
  font-size: 28rpx;
  font-weight: bold;
  margin-top: 10rpx;
}
.home .product .product-box .product-isHot {
  position: absolute;
  top: 22rpx;
  left: 54rpx;
  width: 70rpx;
  height: 60rpx;
  color: #fff;
  font-size: 26rpx;
  font-weight: bold;
  border-radius: 0 0 10rpx 10rpx;
  background-color: #0c34ba;
  text-align: center;
  line-height: 60rpx;
}

