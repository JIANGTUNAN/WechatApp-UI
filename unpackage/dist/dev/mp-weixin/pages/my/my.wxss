uni-page-body {
  height: 100%;
}
.my {
  background-color: #f7f7f7;
  height: 100%;
}
.my .nav-bg .img-box {
  height: 400rpx;
}
.my .nav-bg .img-box .img {
  width: 100%;
  height: 100%;
}
.my .popup {
  position: relative;
  top: -100rpx;
  border-radius: 30rpx 30rpx 0 0;
  padding: 30rpx;
  padding-bottom: 50rpx;
  margin: 0 30rpx;
  overflow: hidden;
  background-image: linear-gradient(rgba(255, 255, 255, 0.3), #fff, #fff);
}
.my .popup .popup-title {
  margin-bottom: 75rpx;
  padding: 0 20rpx;
  display: flex;
}
.my .popup .popup-title .popup-left {
  flex: 30%;
}
.my .popup .popup-title .popup-left .img-box {
  width: 150rpx;
  height: 150rpx;
  overflow: hidden;
}
.my .popup .popup-title .popup-left .img-box .img {
  width: 100%;
}
.my .popup .popup-title .popup-right {
  flex: 70%;
}
.my .popup .popup-title .popup-right .popup-right-title {
  color: #0c34ba;
  font-size: 40rpx;
  font-weight: bold;
}
.my .popup .popup-title .popup-right .popup-right-desc {
  color: #999;
  font-size: 32rpx;
  margin: 30rpx 0;
}
.my .popup .popup-item {
  font-size: 36rpx;
  border-bottom: 2rpx solid #ccc;
  padding: 40rpx 0;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

